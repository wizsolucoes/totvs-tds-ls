{
    "compilerOptions": {
        "lib": [
        "es2018",
        "dom"
        ],
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "allowJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "./prettier.config.js",
        "./jest.config.js",
        "./coverage"
    ]
}